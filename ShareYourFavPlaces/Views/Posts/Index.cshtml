@model IEnumerable<ShareYourFavPlaces.Models.Post>

@{
    ViewData["Title"] = "All the Post";
}

<h1>All Posts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table sortable table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a href="#">Title</a>
            </th>
            <th>
                <a href="#">PlaceName</a>
            </th>
            <th align="center">
                <a href="#">Cost</a>
            </th>
            <th>
                <a href="#">Experience</a>
            </th>
            <th class="sorttable_nosort">
                
            </th>
            <th>
                <a href="#">Type</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    <img src="~/img/posts/@item.Photo" alt="Post Photo" class="img-thumbnail" />
                }
                else
                {
                    <img src="~/img/posts/placeholder.gif" alt="Post Photo" class="img-thumbnail" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
